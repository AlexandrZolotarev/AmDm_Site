@using AmDmSite.Models.SiteDataBase
@model IEnumerable<Performer>

<h1>Исполнители</h1>
<div class="h1__info">Исполнители и самые просматриваемые композиции. Данные по статистике просмотров за неделю.</div>
<table class="items">
    <thead><tr class="top_label"><th colspan="2">Исполнитель</th><th class="number">Песен</th><th class="number">Просмотров</th></tr></thead>
    <tbody>
        @foreach (var performer in Model)
        {
        <tr>
            <td class="photo">
                <a class="photo"><img src=@performer.PathToPhoto title=@performer.Name width="33"> </a>
            </td>
            <td class="artist_name">
                <a href="//amdm.ru/akkordi/kino/" class="artist">@performer.Name</a>
            </td>
            <td class="number">@performer.Songs.Count </td>
            <td class="number">@performer.ViewsCount</td>
        </tr>
        }
    </tbody>
</table>