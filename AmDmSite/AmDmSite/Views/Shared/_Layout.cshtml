
<style>
.map{
    color: black;
    margin-top: 5px;
}
</style>

<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>



<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-image:url('http://www.kombik.com/upload/iblock/666/666e28dc6b6538e7eeb75063a83213f9.jpg'); background-position:0% 50%; background-repeat:no-repeat; background-color:white;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
            </div>
        </div>
    </div>
 

    <div class="container body-content">
        <div class="map">
            @Html.MvcSiteMap().SiteMapPath()
        </div>
      
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/jquery-1.7.1.js")   
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @RenderSection("scripts", required: false)

</body>
</html>

